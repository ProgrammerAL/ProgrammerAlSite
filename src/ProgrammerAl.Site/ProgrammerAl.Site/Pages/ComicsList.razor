@page "/comics-list"
@using System.Text.Encodings.Web;

<div class="flex flex-col gap-4">
    @foreach (var post in ComicSummaries)
    {
        <div class="border border-2 border-green-800 p-2">
            <a class="text-xl font-bold" href="/comics/@post.TitleLink">
                <img src="@($"{ApiConfig.StorageApiBaseEndpoint}/storage/Posts/{post.ComicImageLink}")" />
            </a>
        </div>
    }
</div>